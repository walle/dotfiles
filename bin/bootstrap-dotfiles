#!/usr/bin/env sh

SCRIPT_DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
DOTFILES_DIR=$( cd "$SCRIPT_DIR/../" && pwd )
cd "$DOTFILES_DIR"

setup_bin() {
  cp -r bin $HOME/
}

configure_osx() {
  sh osx/config.sh
}

configure_sublime() {
  sublime2_user_dir="$HOME/Library/Application Support/Sublime Text\ 2/Packages/User/"
  sublime3_user_dir="$HOME/Library/Application Support/Sublime Text\ 3/Packages/User/"
  if [ -e "$sublime2_user_dir" ]
  then
    mv "$sublime2_user_dir" "${sublime2_user_dir}Backup"
    ln -s $DOTFILES_DIR/sublime/User "$sublime2_user_dir"
  else
    echo "No Sublime Text 2 installation found"
  fi

  if [ -e "$sublime3_user_dir" ]
  then
    mv "$sublime3_user_dir" "${sublime3_user_dir}Backup"
    ln -s $DOTFILES_DIR/sublime/User "$sublime3_user_dir"
  else
    echo "No Sublime Text 3 installation found"
  fi
}

echo "Bootstrapping dotfiles"

setup_bin

sh bin/reset-dotfiles
sh bin/install-software
sh bin/update-software

if [ "$(uname -s)" == "Darwin" ]
then
  configure_sublime
  configure_osx
fi

exit 0