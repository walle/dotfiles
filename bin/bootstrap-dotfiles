#!/usr/bin/env sh

SCRIPT_DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
DOTFILES_DIR=$( cd "$SCRIPT_DIR/../" && pwd )
cd "$DOTFILES_DIR"

setup_bin() {
  cp -r bin $HOME/
}

configure_osx() {
  sh osx/config.sh
}

echo "Bootstrapping dotfiles"

setup_bin

sh bin/reset-dotfiles
sh bin/install-software
sh bin/update-software

if [ "$(uname -s)" == "Darwin" ]
then
  configure_osx
fi

exit 0