#!/usr/bin/env sh

SCRIPT_DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
DOTFILES_DIR=$( cd "$SCRIPT_DIR/../" && pwd )
cd "$DOTFILES_DIR"

SCRIPT_DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"
DOTFILES_DIR=$( cd "$SCRIPT_DIR/../" && pwd )
cd "$DOTFILES_DIR"

setup_bash() {
  for file in {bash/aliases.sh,bash/exports.sh,bash/functions.sh,bash/prompt.sh,bash/profile.sh}; do
    cat "${file}"
    echo
  done > $HOME/.bash_profile
  unset file
  cp bash/rc.sh $HOME/.bashrc

  source $HOME/.bash_profile
}

setup_git() {
  cp git/ignore.sh $HOME/.gitignore
  cp git/config.sh $HOME/.gitconfig
}

setup_ruby() {
  cp ruby/irbrc.rb $HOME/.irbrc
  cp ruby/gemrc.yml $HOME/.gemrc
}

setup_readline() {
  cp readline/inputrc.sh $HOME/.inputrc
  bind -f $HOME/.inputrc
}

setup_wget() {
  cp wget/rc.sh $HOME/.wgetrc
}

setup_gas() {
  cp gas/config.sh $HOME/.gas
}

setup_bash
setup_git
setup_ruby
setup_readline
setup_wget
setup_gas